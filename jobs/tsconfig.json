{
  "extends": "../tsconfig.json",
  "include": ["src", "package.json"],
  "references": [
    {
      "path": "../database"
    }
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "sourceMap": true,
    "inlineSources": true,
    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/",
    "types": []
  }
}
