{
  "name": "@safee/jobs",
  "version": "0.0.1",
  "description": "Job handlers and email templates for Safee Analytics",
  "module": "src/index.ts",
  "scripts": {
    "dev": "tsx watch -r dotenv/config src/worker.ts",
    "start": "node build/src/worker.js",
    "lint": "eslint . --max-warnings 0 --cache",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "fmt": "prettier . --write --cache",
    "fmt:check": "prettier . --check",
    "check": "tsc --noEmit",
    "build": "tsc --build .",
    "test": "vitest run --passWithNoTests"
  },
  "type": "module",
  "keywords": [
    "jobs",
    "email",
    "templates"
  ],
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@google-cloud/bigquery": "^8.1.1",
    "@google/genai": "1.25.0",
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.0",
    "langsmith": "^0.3.82",
    "openai": "^6.9.1",
    "pino": "^9.13.1",
    "pino-abstract-transport": "^1.1.0",
    "pino-pretty": "^10.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.14.7",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "5.8.3",
    "vitest": "^4.0.15"
  },
  "exports": {
    ".": "./build/src/index.js",
    "./jobRegistry": "./build/src/jobRegistry.js",
    "./jobPayloads": "./build/src/jobPayloads.js",
    "./queues": "./build/src/queues/index.js"
  }
}
