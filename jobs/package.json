{
  "name": "@safee/jobs",
  "version": "0.0.1",
  "description": "Job handlers and email templates for Safee Analytics",
  "module": "src/index.ts",
  "scripts": {
    "dev": "tsx watch -r dotenv/config src/worker.ts",
    "start": "node --import ./build/src/instrument.js build/src/worker.js",
    "lint": "eslint . --max-warnings 0 --cache",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "fmt": "prettier . --write --cache",
    "fmt:check": "prettier . --check",
    "check": "tsc --noEmit",
    "build": "tsc --build . && npm run sentry:sourcemaps",
    "test": "vitest run --passWithNoTests",
    "sentry:sourcemaps": "if [ \"$NODE_ENV\" = \"production\" ] || [ \"$UPLOAD_SOURCEMAPS\" = \"true\" ]; then sentry-cli sourcemaps inject --org safee-analytics --project safee-jobs ./build && sentry-cli sourcemaps upload --org safee-analytics --project safee-jobs ./build; else echo 'Skipping source maps upload (set UPLOAD_SOURCEMAPS=true or NODE_ENV=production to enable)'; fi"
  },
  "type": "module",
  "keywords": [
    "jobs",
    "email",
    "templates"
  ],
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@google-cloud/bigquery": "^8.1.1",
    "@google/genai": "1.25.0",
    "@sentry/cli": "^2.58.4",
    "@sentry/node": "^10.32.1",
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.0",
    "langsmith": "^0.3.82",
    "openai": "^6.9.1",
    "pino": "^9.13.1",
    "pino-abstract-transport": "^1.1.0",
    "pino-pretty": "^10.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.14.7",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "5.8.3",
    "vitest": "^4.0.15"
  },
  "exports": {
    ".": "./build/src/index.js",
    "./jobRegistry": "./build/src/jobRegistry.js",
    "./jobPayloads": "./build/src/jobPayloads.js",
    "./queues": "./build/src/queues/index.js"
  }
}
