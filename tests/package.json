{
  "name": "@safee/tests",
  "version": "1.0.0",
  "description": "Safee Analytics Testing",
  "type": "module",
  "scripts": {
    "lint": "eslint . --max-warnings 0 --cache",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "lint-all": "eslint . --max-warnings 0",
    "fmt": "prettier . --write --cache",
    "fmt:check": "prettier . --check",
    "check": "tsc --noEmit",
    "clean": "rm -rf coverage dist",
    "build": "tsc --build",
    "test-server": "tsx integration/test-server.ts",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run integration/",
    "test:unit": "vitest run --exclude integration/"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "concurrently": "^8.2.2",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "5.8.3",
    "vitest": "^2.1.8",
    "zod": "^4.0.5"
  }
}
