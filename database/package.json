{
  "name": "@safee/database",
  "version": "1.0.0",
  "description": "Safee Database Shared Library",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint . --max-warnings 0 --cache",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "fmt": "prettier . --write --cache",
    "fmt:check": "prettier . --check",
    "check": "tsc --noEmit",
    "clean": "tsc --build --clean",
    "build": "tsc --build .",
    "test": "npm run test:unit && npm run test:integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --no-file-parallelism --pool=forks --poolOptions.forks.singleFork=true --passWithNoTests src/**/*.integration.test.ts",
    "test:unit": "vitest run --passWithNoTests --exclude '**/*.integration.test.ts'",
    "test:services:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:services:down": "docker-compose -f docker-compose.test.yml down",
    "test:services:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "test:migrate": "DATABASE_URL=postgresql://safee:safee@localhost:45432/safee drizzle-kit migrate",
    "test:setup": "npm run test:services:up && sleep 3 && npm run test:migrate",
    "migrate": "drizzle-kit migrate",
    "postmigrate": "tsx -r dotenv/config src/private/postmigrate.ts",
    "bumpMigrations": "tsx -r dotenv/config src/private/bumpMigrations.ts",
    "generate-migration": "drizzle-kit generate",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:studio": "drizzle-kit studio",
    "db:reset": "tsx -r dotenv/config src/private/reset-db.ts"
  },
  "keywords": [
    "drizzle",
    "database",
    "safee"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/communication-email": "^1.1.0",
    "@azure/service-bus": "^7.9.4",
    "@azure/storage-blob": "^12.24.0",
    "@google-cloud/pubsub": "^4.9.0",
    "@google-cloud/storage": "^7.17.1",
    "@types/redis": "^4.0.11",
    "cron": "^3.1.7",
    "date-fns": "4.1.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "0.44.2",
    "pg": "^8.13.0",
    "pino": "^9.3.2",
    "redis": "^5.8.2",
    "uuid": "^11.0.5",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^2.1.8",
    "drizzle-kit": "0.31.4",
    "eslint": "^9.12.0",
    "globstar": "^1.0.0",
    "postgrator": "^7.2.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "5.8.3",
    "vitest": "^2.1.8"
  },
  "exports": {
    ".": "./build/src/index.js",
    "./logging": "./build/src/logging.js",
    "./storage": "./build/src/storage/index.js",
    "./test-helpers": "./build/src/test-helpers/index.js"
  }
}
