# Local Development Environment Configuration
# Copy this to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/safee_dev"
TEST_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/safee_test"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT & Security
JWT_SECRET="local-dev-secret-change-in-production-use-at-least-32-chars"
JWT_EXPIRES_IN="7d"
COOKIE_KEY="local-dev-cookie-key-change-in-production-32-chars-min"
API_SECRET_KEY="local-dev-api-secret-change-in-production"

# Server Configuration
PORT=3000
HOST="0.0.0.0"
NODE_ENV="development"
ENV="local"

# CORS & Frontend
CORS_ORIGIN="http://localhost:5173"
DASHBOARD_BASE_URL="http://localhost:3000/"

# Logging
LOG_LEVEL="debug"
SQL_LOG_LEVEL="info"

# Storage (Local Development)
USE_CLOUD_STORAGE=false
FILE_UPLOAD_PATH="uploads"

# Optional: Cloud Storage (when USE_CLOUD_STORAGE=true)
# AZURE_STORAGE_ACCOUNT_NAME="your-storage-account"
# AZURE_STORAGE_ACCOUNT_KEY="your-storage-key"
# FILE_UPLOAD_BUCKET="dev-safee-private-storage"

# Optional: Google Cloud Storage
# GCP_PROJECT_ID="your-project-id"
# GCP_SERVICE_ACCOUNT_PATH="/path/to/service-account.json"

# Optional: Application Insights (for monitoring)
# APPLICATION_INSIGHTS_CONNECTION_STRING="your-connection-string"
# APPLICATION_INSIGHTS_INSTRUMENTATION_KEY="your-instrumentation-key"