# Database
DATABASE_URL="postgresql://username:password@postgres:5432/safee_prod"

# JWT - REQUIRED: Generate a secure random string (min 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="production"

# CORS
CORS_ORIGIN="https://app.safee.dev"
FRONTEND_URL="https://app.safee.dev"
LANDING_URL="https://safee.dev"

# Better Auth
BETTER_AUTH_URL="https://api.safee.dev/api/v1/auth"
# IMPORTANT: Set cookie domain to share cookies across subdomains
COOKIE_DOMAIN=".safee.dev"

# API
API_PREFIX="/api/v1"

# Odoo Configuration
ODOO_URL="http://odoo:8069"

# OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
